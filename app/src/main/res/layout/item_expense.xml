<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp">

        <!-- Expense Icon (optional, can change dynamically if you want) -->
        <ImageView
            android:id="@+id/expIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="Expense Icon"
            app:srcCompat="@drawable/ic_food"/>


        <!-- Expense Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/expTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/expCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coffee from Starbucks"
                android:textColor="#777"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- Amount and Date -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/expAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚±120.00"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/expDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oct 26"
                android:textColor="#777"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>